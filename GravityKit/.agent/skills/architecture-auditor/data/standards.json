{
    "security": {
        "checklist": [
            "Validate all inputs (Server-side validation)",
            "Use prepared statements for SQL (No SQL Injection)",
            "Implement CSRF protection for state-changing requests",
            "Set Secure and HttpOnly flags on cookies",
            "Use HTTPS everywhere",
            "Hash passwords with Argon2 or bcrypt",
            "Limit API rate (Rate Limiting)",
            "Sanitize output to prevent XSS"
        ],
        "headers": {
            "Content-Security-Policy": "default-src 'self'",
            "X-Content-Type-Options": "nosniff",
            "X-Frame-Options": "DENY"
        }
    },
    "performance": {
        "checklist": [
            "Use CDN for static assets",
            "Enable Gzip/Brotli compression",
            "Optimize images (WebP/AVIF)",
            "Database indexing for foreign keys and search fields",
            "Cache expensive database queries (Redis)",
            "Use lazy loading for components and images"
        ]
    },
    "naming_conventions": {
        "variables": "camelCase",
        "classes": "PascalCase",
        "constants": "UPPER_SNAKE_CASE",
        "files": "kebab-case (e.g., user-profile.tsx)",
        "database_tables": "snake_case_plural (e.g., users, order_items)"
    },
    "tech_debt_indicators": [
        "Functions with > 50 lines of code",
        "Files with > 300 lines of code",
        "Hardcoded secrets/config",
        "Duplicate code blocks (DRY violation)",
        "Lack of unit tests for core logic",
        "Circular dependencies",
        "Catching generic Exception"
    ]
}